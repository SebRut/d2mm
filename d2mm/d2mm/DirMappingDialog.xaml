<controls:MetroWindow x:Class="de.sebastianrutofski.d2mm.DirMappingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="DirMappingDialog" SizeToContent="Height" Width="364">
    <Grid  Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="0"  Name="modDirs" Margin="5" />

        <TextBox Grid.Column="1" Name="dotaDir" Margin="5"/>

        <Button Grid.Row="1" Grid.ColumnSpan="2" Content="Save" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Button_Click"  Margin="5" />
    </Grid>
</controls:MetroWindow>
